<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>  <!-- flashというオブジェクトを対象にflashハッシュキーとバリュー(keyとvalue)を繰り返し処理をする -->
        <div class="alert alert-<%= message_type %>"><%= message %></div>  <!-- alert- ~ のところはCSSのクラスが動的に変化する。例 alert-sucucess -->
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
