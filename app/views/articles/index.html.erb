<% provide(:title, "顧客リスト") %>

<%= stylesheet_link_tag 'validationEngine.jquery' %> <!-- validationEngine.jquery.css　読み込み -->
<%= javascript_include_tag 'jquery-3.4.1.min.js' %> <!-- jquery本体 読み込み -->
<%= javascript_include_tag 'jquery.jpostal.js' %> <!-- jquery.jpostal.js 読み込み -->
<!--<%= javascript_include_tag 'jquery.validationEngine.js' %> <!-- validationEngine本体 読み込み ---->
<!--<%= javascript_include_tag 'jquery.validationEngine-ja.js' %> <!-- 日本語ファイル 読み込み ---->

<div class="main-contents">
  <div class="base-new">
     <button type="button" class="btn btn-success rounded-circle p-0" data-toggle="collapse" data-target="#collapseExample"
                                                  　aria-expanded="false" aria-controls="collapseExample" style="width:2rem;height:2rem;">
      ＋
      </button>
  </div>
  <div class="collapse" id="collapseExample">
    <div class="card card-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 「起動スクリプト」 -->
<script>
$(function () {
	$('#postcode').jpostal({
		postcode : [
			'#postcode'
		],
		address : {
			'#address' : '%3%4%5'
		}
	});
});

// $(function(){
//     $("#form_id").validationEngine();
// });

</script>

<table class="table table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>名称</th>
      <th>郵便番号</th>
      <th>所在地</th>
      <th>電話番号</th>
      <th>編集/削除</th>
    </tr>
  </thead>
  
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.postcode %></td>
      <td><%= article.address %></td>
      <td><%= article.phone_num %></td>
      <td>
        <div class="article-edit">
          <a data-toggle="collapse" data-target="#edit-<%= article.id %>" aria-expanded="false"
             aria-controls="collapseExample" role="button" data-base="<%= article.id %>" >
          編集
          </a>
          <div class="collapse" id="edit-<%= article.id %>">
            <div class="card card-body">
              <div class="row">
                <div class="col-md-6 col-md-offset-3">
                  <%= render 'edit_form', { article: article } %>
                </div>
              </div>
            </div>
          </div>
           / <%= link_to "削除", delete_articles_path(id: article, user_id: @user.id), method: :delete, data: {confirm: "削除してよろしいですか？"} %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>

