<% provide(:title, "拠点情報") %>

<div class="title-name">
  <h1>拠点情報登録</h1>
</div>

<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for @article, url: base_create_user_articles_path, html: { role: 'form', :id => "form_1" } do |f| %>
      <%= render 'shared/article_error_messages', object: @article %>   <!-- 登録失敗時のエラーメッセージ -->
      
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control validate[required]" %>
      
      <%= f.label :postcode %>
      <%= f.text_field :postcode, class: "form-control validate[required]", id: "postcode" %>
      
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control validate[required]", id: "address" %>
      
      <%= f.label :phone_num %>
      <%= f.text_field :phone_num, class: "form-control validate[required, custom[phone]]" %>
      
      <%= f.submit "登録", class: "btn btn-success login" %>
      
    <% end %>
  </div>
</div>

<!-- 「起動スクリプト」 -->
<script>
$(function () {
	$('#postcode').jpostal({
		postcode : [
			'#postcode'
		],
		address : {
			'#address' : '%3%4%5'
		}
	});
});

$(function(){
    $("#form_1").validationEngine();
});

</script>