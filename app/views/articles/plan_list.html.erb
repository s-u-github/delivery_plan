                  }
                  // document.getElementById("start").innerHTML = start;
                  var alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".split("");
                  for(var i=1; i<response.routes[0].legs.length; i++){
                    document.getElementById("start_number").innerHTML = alphabet[0] + ' , ' + alphabet[response.routes[0].legs.length -1 + 1]
                    document.getElementById("start").innerHTML = start[0];
                    document.getElementById(`number${i}`).innerHTML = alphabet[i];
                    document.getElementById(`leg${i}`).innerHTML = leg[i];
                  }
                }
                
