<%= form_for base, url: basis_path(base), method: :patch, id: "form_id", class: "edit-form" do |f| %>
  
  <%= f.label :base_name %>
  <%= f.text_field :base_name, class: "form-control edit-form" %>
  
  <%= f.label :postcode %>
  <%= f.text_field :postcode, class: "form-control edit-form", id: "postcode" %>
  
  <%= f.label :address %>
  <%= f.text_field :address, class: "form-control edit-form", id: "address" %>
  
  <%= f.label :base_phone_num %>
  <%= f.text_field :base_phone_num, class: "form-control edit-form" %>
  
  <%= f.submit "編集", class: "btn btn-success" %>
  
<% end %>