<% provide(:title, "ユーザー編集") %>

<div class="title-name">
  <h1>ユーザー編集</h1>
</div>

<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for @user, html: { role: 'form', :id => "form_1" } do |f| %>
      <%= render 'shared/error_messages', object: @user %>   <!-- 登録失敗時のエラーメッセージ -->

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control validate[required]" %>
      
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control validate[required,custom[email]]" %>
      
      <%= f.label :password %>
      <%= f.password_field :password, id: "passwd", class: "form-control validate[required,minSize[6]]" %>
      
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control validate[required,equals[passwd]]' %>
      

      <%= f.submit "登録", class: "btn btn-primary login" %>
    <% end %>
  </div>
</div>

<script>

 $(function(){
    jQuery("#form_1").validationEngine();
  });
  
</script>